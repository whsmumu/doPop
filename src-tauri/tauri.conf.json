{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "do-pop",
  "version": "0.1.0",
  "identifier": "com.bewindow.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "do-pop",
        "width": 820,
        "height": 600,
        "visible": true,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent",
        "alwaysOnTop": true,
        "closable": true,
        "minimizable": true,
        "decorations": false,
        "focus": true,
        "transparent": true,
        "center": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": [
        "**"
      ]
    }
  }
}